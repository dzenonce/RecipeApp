<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="StyleTitle14" parent="TextAppearance.AppCompat">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/montserratalternates_semibold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="StyleNavButton" parent="Widget.Material3.Button">
        <item name="android:textAppearance">@style/StyleTitle14</item>
        <item name="android:paddingVertical">1dp</item>
        <item name="android:paddingHorizontal">2dp</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <style name="StyleMenuHeader20" parent="TextAppearance.AppCompat">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/montserratalternates_semibold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/text_menu_header_purple_color</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:paddingHorizontal">10dp</item>
        <item name="android:paddingVertical">10dp</item>
        <item name="android:background">@drawable/shape_radius_variant_menu_header</item>
    </style>

    <style name="StyleCardHeader14" parent="TextAppearance.AppCompat">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/montserratalternates_semibold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/text_menu_header_purple_color</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginVertical">8dp</item>
    </style>

    <style name="StyleCardDescription12" parent="TextAppearance.AppCompat">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textColor">@color/category_description_grey_color</item>
        <item name="android:layout_marginHorizontal">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="CardStyle16">
        <item name="android:clickable">true</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="cardCornerRadius">@dimen/margin_container_half</item>
        <item name="android:layout_marginHorizontal">@dimen/margin_container_half</item>
        <item name="android:layout_marginTop">@dimen/margin_container</item>
    </style>

</resources>