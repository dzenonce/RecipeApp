<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="StyleTitle14" parent="TextAppearance.AppCompat">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/montserratalternates_semibold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="StyleNavButton" parent="Widget.Material3.Button">
        <item name="android:textAppearance">@style/StyleTitle14</item>
        <item name="android:paddingVertical">1dp</item>
        <item name="android:paddingHorizontal">2dp</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <style name="StyleMenuHeader20" >
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/montserratalternates_semibold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/purple_color</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:paddingHorizontal">10dp</item>
        <item name="android:paddingVertical">10dp</item>
        <item name="android:background">@drawable/shape_radius_variant_menu_header</item>
    </style>

    <style name="StyleCardHeader14" parent="TextAppearance.AppCompat">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/montserratalternates_semibold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/purple_color</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginVertical">8dp</item>
    </style>

    <style name="StyleCardDescription12" parent="TextAppearance.AppCompat">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textColor">@color/nature_grey_color</item>
        <item name="android:layout_marginHorizontal">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="StyleCard16">
        <item name="android:clickable">true</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="cardCornerRadius">@dimen/margin_container_half</item>
        <item name="android:layout_marginHorizontal">@dimen/margin_container_half</item>
        <item name="android:layout_marginTop">@dimen/margin_container</item>
    </style>

    <style name="StyleLikeButton">
        <item name="android:background">@null</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:layout_marginTop">@dimen/margin_container</item>
        <item name="android:layout_marginEnd">@dimen/margin_container</item>
    </style>

    <style name="StyleRecipeScreenHeader20">
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">@font/montserratalternates_semibold</item>
        <item name="android:textColor">@color/dark_burgundy_color</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="StylePortionText16">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/montserrat_semibold</item>
        <item name="android:textColor">@color/light_grey_color</item>
    </style>

    <style name="StyleMontserratAllCaps14">
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:color">@color/nature_grey_color</item>
    </style>

    <style name="StyleMontserratAllCapsFalseGrey14" parent="StyleMontserratAllCaps14">
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="StyleRecipeContainer">
        <item name="android:layout_marginVertical">@dimen/margin_container_half</item>
    </style>

    <style name="StyleRecipeAndMethodHeader20" parent="StyleMenuHeader20">
        <item name="android:maxWidth">@dimen/size_header_screen_recipe_and_method_max</item>
    </style>

    <style name="StyleSeekBar">
        <item name="android:thumb">@drawable/shape_seekbar_thumb</item>
        <item name="android:progressDrawable">@drawable/shape_seekbar_progress</item>
    </style>

</resources>