<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/category_card_half_horizontal_margin"
    android:layout_marginVertical="@dimen/category_card_half_vertical_margin"
    android:background="?attr/selectableItemBackgroundBorderless"
    app:cardCornerRadius="@dimen/category_card_radius">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivCardCategoryImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvCardCategoryHeader"
            style="@style/StyleCardCategoryHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/category_card_header_margin"
            android:layout_marginTop="@dimen/category_card_header_margin" />

        <TextView
            android:id="@+id/tvCardCategoryDescription"
            style="@style/StyleCardCategoryDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/category_card_description_margin"
            android:layout_marginTop="@dimen/category_card_description_margin" />

    </LinearLayout>

</androidx.cardview.widget.CardView>